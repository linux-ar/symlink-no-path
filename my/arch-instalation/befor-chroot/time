#!/bin/bash
clear

echo -e "\n**************************\n\n\t 	start ff 5	n\n\n**************************\n" 




use_time_local(){
	echo "en_US.UTF-8 UTF-8" > /etc/locale.gen
	locale-gen
	#export LANG=en_US.UTF-8
	echo "LANG=en_US.UTF-8" >> /etc/locale.conf
	ln -s /usr/share/zoneinfo/Europe/Brussels /etc/localtime
}


#++++++++++++++++++++++++++++++++
#		ff		+
#++++++++++++++++++++++++++++++++



	use_time_local


