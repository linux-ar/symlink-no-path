#!/bin/bash
clear

echo -e "\n**************************\n\n\t 	start ff 5	n\n\n**************************\n" 

use_instalalion(){

	mkdir  /mnt/root
	mkdir  /mnt/boot
	mkdir  /mnt/home
	mkdir  /mnt/home/t

	cp -r /mnt/win/myhome/myhome/*      /mnt/home/t
	cp -r /mnt/win/myhome/myhome/.*     /mnt/home/t
	cp -r /mnt/win/myhome/myhome/.*     /mnt/root    #just config file
	
	
	
	
#bash instalation 
}





#++++++++++++++++++++++++++++++++++++++++
#		instalation		+
#++++++++++++++++++++++++++++++++++++++++


	use_instalalion

